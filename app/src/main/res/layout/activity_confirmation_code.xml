<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="com.example.ramona.planyourtrip.ConfirmationCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary2"
            android:text="@string/succes" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimary2"
            android:layout_marginTop="35dp"
            android:text="@string/contCreat" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary2"
            android:text="@string/introducetiCod" />

        <EditText
            android:id="@+id/editText_confirationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ems="5"
            android:textColor="#FBEFF2"
            android:textAlignment="center"
            android:hint="A5b6yy"
            android:inputType="textPersonName"
            android:onClick="golesteEditText"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_verificaCod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:background="@drawable/rotunjire_buton_mov"
                android:textColor="#b56b70"
                android:clickable="true"
                android:onClick="checkConfirmationCode"
                android:text="@string/verificaCod" />

            <Button
                android:id="@+id/btn_retrimiteCod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textSize="15dp"
                android:fontFamily="casual"
                android:clickable="true"
                android:textStyle="bold"
                android:background="@drawable/rotunjire_buton_mov"
                android:textColor="#b56b70"
                android:onClick="sendConfirmationEmail"
                android:text="@string/retrimiteCod" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
