<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ramona.planyourtrip.Home"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="10">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_tv_titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:text="@string/titluHome"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <GridLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:visibility="visible">

                <!-- card1-->
                <android.support.v7.widget.CardView
                    android:id="@+id/home_cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/rome2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="Rome"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:clickable="true"
                                android:fontFamily="cursive"
                               android:text="@string/btnExplore"
                                android:textColor="@android:color/black"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--card 2-->
                <android.support.v7.widget.CardView
                    android:id="@+id/home_cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/new_york3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="Paris"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:text="@string/btnExplore"
                                android:fontFamily="cursive"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--card 3-->
                <android.support.v7.widget.CardView
                    android:id="@+id/home_cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="25dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/new_york3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="New York"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:text="@string/btnExplore"
                                android:fontFamily="cursive"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--card 4-->
                <android.support.v7.widget.CardView
                    android:id="@+id/home_cardView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/los_angeles2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="Los Angeles"
                                android:layout_gravity="start"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:text="@string/btnExplore"
                                android:fontFamily="cursive"
                                android:textColor="@android:color/black"
                                android:textSize="12dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--card 5-->
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/home_cardView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="144dp"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/hawaii2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_tv5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="Hawaii"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:text="@string/btnExplore"
                                android:fontFamily="cursive"
                                android:textColor="@android:color/black"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--card 6-->
                <android.support.v7.widget.CardView
                    android:id="@+id/home_cardView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="80dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_imageView6"
                            android:layout_width="336dp"
                            android:layout_height="144dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/barcelona2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_tv6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="cursive"
                                android:text="Barcelona"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/home_btn6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buton_explore"
                                android:text="@string/btnExplore"
                                android:fontFamily="cursive"
                                android:textColor="@android:color/black"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </GridLayout>
        </ScrollView>
    </LinearLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/nav_items" />


</android.support.constraint.ConstraintLayout>