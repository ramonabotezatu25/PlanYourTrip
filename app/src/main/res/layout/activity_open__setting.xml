<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_bg"
    tools:context="com.example.ramona.planyourtrip.Open_Setting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Settings_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/settingsTitle"
                android:textColor="#F9F6F9"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Settings_update_pass"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:fontFamily="casual"
                android:background="@drawable/text_view_setting"
                android:text="@string/changePassword"
                android:textAlignment="center"
                android:onClick="schimbaParolaTV"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_update_form"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/text_view_setting"
                android:onClick="settingsPreferences"
                android:text="@string/changeForm"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/linearLaout_SettingsParola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:visibility="invisible"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_Settings_currentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginStart="10dp"
                    android:maxEms="10"
                    android:background="@drawable/text_view_setting"
                    android:hint="@string/currentPassword"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editText_Settings_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="90dp"
                    android:layout_marginStart="10dp"
                    android:maxEms="10"
                    android:background="@drawable/text_view_setting"
                    android:hint="@string/newPassword"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_Settings_updatePasswword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="casual"
                    android:clickable="true"
                    android:onClick="updatePassword"
                    android:background="@drawable/text_view_setting"
                    android:text="@string/updatePass"


                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
